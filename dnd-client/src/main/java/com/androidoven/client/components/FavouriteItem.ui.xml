<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.cookname {
			text-align: left;
			font-family: 'Lato', Arial;
			font-size: 16px;
			line-height: 40px;
			color: white;
		}
		.close_icon {
			outline: none;
			border: none;
			background: none;
			line-height: 40px;
			text-align: center;
			font-family: "FontAwesome";
			font-size: 16px;
			overflow: hidden;
			white-space: nowrap;
			color: rgb(239, 118, 75);
			cursor: pointer;
		}
	</ui:style>
	<g:LayoutPanel>
		<g:layer left="10px" right="10px" top="0px" bottom="0px">
			<g:Label ui:field="cookName" styleName="{style.cookname}" />
		</g:layer>
		<g:layer width="40px" right="0px" top="0px" bottom="0px">
			<g:Label ui:field="close" styleName="{style.close_icon}" />
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 