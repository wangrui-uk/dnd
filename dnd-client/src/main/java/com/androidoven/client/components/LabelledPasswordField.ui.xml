<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.androidoven.client.components.LabelledPasswordField.Resources" field="style">
		.textbox {
			outline: none;
			border: none;
			border-bottom: 2px solid rgb(239, 118, 75);
			background: none;
			color: white;
			font-family: 'Lato';
			font-size: 16px;
			line-height: 30px;
		}
		.label {
			outline: none;
			border: none;
			background: none;
			font-family: 'Lato';
			line-height: 30px;
		}
		.label_color {
			color: gray;
		}
		.label_focus_color {
			color: rgb(239, 118, 75);
		}
		.label_size {
			font-size: 16px;
		}
		.label_focus_size {
			font-size: 12px;
		}
	</ui:style>
	<g:LayoutPanel ui:field="frame">
		<g:layer left="0px" right="0px" height="30px" bottom="0">
			<g:PasswordTextBox ui:field="textbox" styleName="{style.textbox}" width="100%" height="26px"/>
		</g:layer>
		<g:layer left="0px" right="0px" height="30px" bottom="0">
			<g:Label ui:field="title" styleName="{style.label} {style.label_size} {style.label_color}" text="Title"/>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>