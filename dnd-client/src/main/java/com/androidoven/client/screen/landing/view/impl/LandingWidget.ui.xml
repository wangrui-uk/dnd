<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.androidoven.client.components">
	<ui:style>
		.frame_bg {
			background-color: rgb(110, 43, 77);
		}
		.customer_layout {
			top: 50% !important;
			left: 50% !important;
			width: 500px;
			height: 500px;
			margin-left: -250px;
			margin-top: -250px;
		}
		.button {
			margin-left: 10px;
			margin-right: 10px;
			border: none;
			outline: none;
			-webkit-border-radius: 2px;
			-moz-border-radius: 2px;
			border-radius: 2px;
			line-height: 32px;
			cursor: pointer;
			-webkit-box-shadow: 0px 2px 5px 0px rgba(159, 167, 39, 0.75);
			-moz-box-shadow:    0px 2px 5px 0px rgba(159, 167, 39, 0.75);
			box-shadow:         0px 2px 5px 0px rgba(159, 167, 39, 0.75);
			-webkit-transition: all 50ms linear;
			   -o-transition: all 50ms linear;
			   -moz-transition: all 50ms linear;
			   -ms-transition: all 50ms linear;
			   -kthtml-transition: all 50ms linear;
			   transition: all 50ms linear;
		}
		.button:HOVER {
			-webkit-box-shadow: 0px 5px 10px 0px rgba(159, 167, 39, 0.75);
			-moz-box-shadow:    0px 5px 10px 0px rgba(159, 167, 39, 0.75);
			box-shadow:         0px 5px 10px 0px rgba(159, 167, 39, 0.75);
		}
		.button:ACTIVE {
			-webkit-box-shadow: 0px 10px 10px 0px rgba(159, 167, 39, 0.75);
			-moz-box-shadow:    0px 10px 10px 0px rgba(159, 167, 39, 0.75);
			box-shadow:         0px 10px 10px 0px rgba(159, 167, 39, 0.75);
		}
		.text {
			text-align: center;
			font-family: 'Lato', Arial;
			font-size: 16px;
			width: 150px;
			height: 40px;
			line-height: 40px;
			cursor: pointer;
			background-color: rgb(239, 118, 75);
			color: white;
		}
		.padding_left {
			padding-left: 5px;
		}
		.padding_right {
			padding-right: 5px;
		}
		.button_layout {
			top: 50% !important;
			left: 50% !important;
			width: 100px;
			height: 100px;
			margin-left: -50px;
			margin-top: -50px;
		}
		.switch_button {
			margin-left: 10px;
			margin-right: 10px;
			border: none;
			outline: none;
			-webkit-border-radius: 60px;
			-moz-border-radius: 60px;
			border-radius: 60px;
			width: 60px;
			height: 60px;
			line-height: 60px;
			cursor: pointer;
			-webkit-box-shadow: 0px 2px 5px 0px rgba(80, 80, 80, 0.75);
			-moz-box-shadow:    0px 2px 5px 0px rgba(80, 80, 80, 0.75);
			box-shadow:         0px 2px 5px 0px rgba(80, 80, 80, 0.75);
			-webkit-transition: all 50ms linear;
			-o-transition: all 50ms linear;
			-moz-transition: all 50ms linear;
			-ms-transition: all 50ms linear;
			-kthtml-transition: all 50ms linear;
			transition: all 50ms linear;
		}
		.switch_button:HOVER {
			-webkit-box-shadow: 0px 5px 10px 0px rgba(80, 80, 80, 0.75);
			-moz-box-shadow:    0px 5px 10px 0px rgba(80, 80, 80, 0.75);
			box-shadow:         0px 5px 10px 0px rgba(80, 80, 80, 0.75);
		}
		.switch_button:ACTIVE {
			-webkit-box-shadow: 0px 10px 10px 0px rgba(80, 80, 80, 0.75);
			-moz-box-shadow:    0px 10px 10px 0px rgba(80, 80, 80, 0.75);
			box-shadow:         0px 10px 10px 0px rgba(80, 80, 80, 0.75);
		}
		.switch_text {
			text-align: center;
			font-family: "FontAwesome";
			font-size: 24px;
			cursor: pointer;
			background-color: white;
			color: rgb(110, 43, 77);
		}
	</ui:style>
	<ui:with type="com.androidoven.client.resources.ThemeManager" field="theme" />
	<g:LayoutPanel ui:field="frame" styleName="{style.frame_bg}">
		<g:layer left="0PX" width="50%" top="0PX" bottom="0PX">
			<g:LayoutPanel>
				<g:layer>
					<g:LayoutPanel styleName="{style.customer_layout}">
						<g:layer left="10px" right="10px" top="190px" height="60px">
							<c:LabelledTextField ui:field="usernameField" />
						</g:layer>
						<g:layer left="10px" right="10px" top="250px" height="60px">
							<c:LabelledPasswordField ui:field="passwordField" />
						</g:layer>
						<g:layer right="-10px" width="180px" top="350px" height="60px">
							<g:Button styleName="{style.button} {style.text}" text="SIGN IN"/>
						</g:layer>
					</g:LayoutPanel>
				</g:layer>
			</g:LayoutPanel>
		</g:layer>
		<g:layer right="0PX" width="50%" top="0PX" bottom="0PX">
			<g:LayoutPanel>
				<g:layer left="0px" right="0px" top="0px" bottom="0px">
					<g:SimplePanel width="100%" height="100%" ui:field="customerBgPanel">
						<g:Image resource="{theme.getLandingBundle.customerImg}" ui:field="customerBgImg"/>
					</g:SimplePanel>
				</g:layer>
				<g:layer left="100px" width="400px" top="50px" bottom="50px">
					<c:CookWidget />
				</g:layer>
				<g:layer left="550px" width="400px" top="50px" bottom="50px">
					<c:CookWidget />
				</g:layer>
			</g:LayoutPanel>
		</g:layer>
		<g:layer left="45%" right="45%" top="45%" bottom="45%">
			<g:LayoutPanel styleName="{style.button_layout}">
				<g:layer left="0px" right="0px" top="0px" bottom="0px">
					<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" >
						<g:Button styleName="{style.switch_button} {style.switch_text}" ui:field="switchButton"/>
					</g:VerticalPanel>
				</g:layer>
			</g:LayoutPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>